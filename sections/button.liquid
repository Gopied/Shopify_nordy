<hr>
<div id="section-cta">
    <div class="buttonContainer">
    <a href="{{ section.settings.link }}" class="button" style="color: {{ section.settings.colortxt}}; background-color: {{section.settings.colorbtn}}; width: {{section.settings.taillebtn}}" >{{ section.settings.linktext }}</a>
    </div>
</div>
<hr>

{% schema %}
{
  "name": "Button",
  "settings": [
    
    {
      "id": "link",
      "type": "url",
      "label": "Button link"
    },
    {
      "type": "text",
      "label": "Button text",
      "default": "Clique ici"
    },
    {
        "id": "colortxt",
        "type": "color",
        "label": "couleur du texte ",
        "default": "#FFFFFF"
    },
    {
        "id": "colorbtn",
        "type": "color",
        "label": "couleur du bouton",
        "default": "#000000"
    },
    {
        "id": "taillebtn",
        "type": "range",
        "min": 10,
        "max": 30,
        "step": 1,
        "unit": "px",
        "label": "Taille du bouton",
        "default": 15
    }
  ]
  ,
  "presets": [
    {
      "name": "Bouton",
      "category": "Nouveau Bouton"
    }
  ]
}
{% endschema %}

